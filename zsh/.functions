ssh-del-host() {
    (( $# )) || { echo "usage: ssh-del-host host" >&2; return 2; }
    ssh-keygen -R "$@"
}
ssh-del-all()  { ssh-add -D; }           # delete all ssh keys
ssh-nopub()    { ssh -qt -o ControlMaster=no -o PubkeyAuthentication=no "$@"; }
ssh-noid()     { ssh -qt -o IdentitiesOnly=yes "$@"; }

