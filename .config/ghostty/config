# Default
command = /bin/zsh
click-repeat-interval = 500
auto-update-channel = stable

# Theme from: ghostty +list-themes
#window-theme = ghostty
theme = dracula
#background-opacity = 0.96
#background-blur-radius = 40

# Cursor
# shell integration will automatically set the cursor to a bar at a prompt
# disable this behavior
shell-integration-features = no-cursor
cursor-style = block
#cursor-opacity = 0.7
#cursor-invert-fg-bg = true

# scrollback limit in bytes
scrollback-limit = 90000000

# Set working directory, defaults to inherit previous processes
working-directory = home
window-inherit-working-directory = false

# Fonts: ghostty +list-fonts
#font-family = Symbols Nerd Font Mono
font-family = Monaco
#font-family-italic = Monaco
#font-family-bold-italic = Monaco
#window-title-font-family = Monaco
font-size = 16
selection-invert-fg-bg = false

# Style
bold-is-bright = false

# macos
macos-titlebar-style = tabs
macos-titlebar-proxy-icon = hidden
macos-option-as-alt = true
clipboard-read = allow
clipboard-write = allow
clipboard-trim-trailing-spaces = true
clipboard-paste-protection = false
#macos-non-native-fullscreen = visible-menu
macos-window-shadow = true

# Quick Terminal animation duration (in seconds)
# Set it to 0 to disable animation completely. This can be changed at runtime.
# quick-terminal-animation-duration = 0.1
quick-terminal-animation-duration = 0.08

# set initial window width and height
window-height = 25
window-width = 80

# window padding
window-padding-x = 4,2
window-padding-y = 6,0
window-padding-balance = true

# quit app after closing last window
quit-after-last-window-closed = false

# Mouse
mouse-hide-while-typing = true
# mouse-scroll-multiplier = 1

# keymaps
keybind = global:cmd+`=toggle_quick_terminal
keybind = shift+ctrl+left_bracket=previous_tab
keybind = shift+ctrl+right_bracket=next_tab

## Splits
keybind = ctrl+shift+r=new_split:right
keybind = ctrl+shift+d=new_split:down

keybind = ctrl+shift+up=goto_split:top
keybind = ctrl+shift+down=goto_split:bottom

keybind = ctrl+shift+left=goto_split:left
keybind = ctrl+shift+right=goto_split:right
